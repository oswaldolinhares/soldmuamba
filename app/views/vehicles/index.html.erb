<h1>Listing vehicles</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Brand</th>
      <th>Year</th>
      <th>Km</th>
      <th>Description</th>
      <th>Description vehicle</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @vehicles.each do |vehicle| %>
      <tr>
        <td><%= vehicle.name %></td>
        <td><%= vehicle.brand %></td>
        <td><%= vehicle.year %></td>
        <td><%= vehicle.km %></td>
        <td><%= vehicle.description %></td>
        <td><%= vehicle.description_vehicle %></td>
        <td><%= vehicle.user %></td>
        <td><%= link_to 'Show', vehicle %></td>
        <td><%= link_to 'Edit', edit_vehicle_path(vehicle) %></td>
        <td><%= link_to 'Destroy', vehicle, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

